/* Grid for gallery */
.gallery {
  display: grid;
  /* minmax ensures each item is at least 200px wide, but can grow */
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 16px;
}

/* Each itemâ€™s container */
.gallery-item {
  position: relative;
  overflow: hidden;
  background: #f0f0f0; /* placeholder background while image loads */
}

/* The img starts hidden / transparent until loaded */
.lazy-image {
  width: 100%;
  height: auto;
  opacity: 0;
  transition: opacity 0.5s ease-in;
  display: block;
  border: 1px solid #007A2B;
  object-fit: cover;
}

/* When the image has fully loaded, make it visible */
.lazy-image.loaded {
  opacity: 1;
}
